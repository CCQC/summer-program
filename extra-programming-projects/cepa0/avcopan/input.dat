# ground state H2O

molecule mol {
  1 2
  O
  H 1 1.1
  H 1 1.1 2 104.0
}

set {
  reference uhf
  basis sto-3g
  e_convergence 10
  scf_type pk
  maxiter 50
}
# run
basisname = psi4.get_global_option("BASIS")
basisset  = psi4.BasisSet.pyconstruct_orbital(mol, "BASIS", basisname)
mints     = psi4.MintsHelper(basisset)

# call spin-orbital UHF code
import sys
sys.path.insert(0, '../../../5/avcopan/')
from uhf import UHF
uhf = UHF(mol, mints)
uhf.compute_energy()

# call CEPA0 code here
from cepa0 import CEPA0
cepa0 = CEPA0(uhf)
print cepa0.compute_energy()

energy('lccd')
